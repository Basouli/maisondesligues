<!DOCTYPE html>
<html class="h-100">
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>

        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/cerulean/bootstrap.min.css" integrity="sha384-3fdgwJw17Bi87e1QQ4fsLn4rUFqWw//KU0g8TvV6quvahISRewev6/EocKNuJmEw" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}
    </head>

    <body class="h-100 d-flex flex-column justify-content-start align-items-center">
        
        {% block navbar %}
            {{ include('./éléments/navbar.html.twig') }}
        {% endblock %}
    
        <div class="h-100 w-100 d-flex flex-column justify-content-center align-items-center" style="overflow-y: scroll;">
            {% for message in app.flashes('notification') %}
                <div class="alert alert-warning">
                    {{ message }}
                </div>
            {% endfor %}
        
            {% block body %}
            {% endblock %}
        </div>
        
        {% block footer %}
            {% include "éléments/footer.html.twig" %}
        {% endblock %}
        
    </body>
</html>
