<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}{% endblock %}
        </title>
        <link rel="stylesheet" href="https://bootswatch.com/5/darkly/bootstrap.min.css">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}

        {%  for message in app.flashes('notification') %}
        <div class="alert alert-warning">
            {{  message }}
        </div>
    {%  endfor %}


    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <img src="/assets/images/speed-boat.png">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home
                        </a>

                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Navires</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Liste des pays</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Liste des ports</a>
                            <a class="dropdown-item" href="#">Créer un port</a>


                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Pays et Ports</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Liste des pays</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Liste des ports</a>
                            <a class="dropdown-item" href="{{ path('creer')}}">Créer un port</a>
                        </div>
                    </li>

                    <a class="nav-link" href="{{ path('app_login')}}">Se connecter
                    </a>

                    <a class="nav-link" href="/logout">Se déconnecter
                    </a>

                </ul>
                <form class="d-flex">
                     
                    
                   
                    <input class="form-control me-sm-2" type="text" placeholder="Cherche IMO ou MMSI">
                    <button type="button" class="btn btn-info">Cherche IMO</button>
                    <br>
                    <button type="button" class="btn btn-info">Cherche MMSI</button>

                </form>
            </div>
        </div>
    </nav>
</head>

<div class="container"> {% block body %}{% endblock %}
    <footer class="footer fixed-bottom bg-primary">
        {% block footer %}
            <div class="row">
                <div class="col-4 text-left txt-footer">
                    <a href="{{ path('message_')}}" class="text-white">
                        Contact
                    </a>
                    <br>
                    <a href="https://moodle.benoitroche.fr" target="_blank" class="text-white">moodle de benoit roche</a>
                </div>
                <div class="col-4 text-center">
                    <img class="img-fluid" src="/assets/images/speed-boat.png">
                </div>
                <div class="col-4 text-right txt-footer">
                    <a href="#" class="text-white">
                        Mentions légales
                    </a>
                    <br>
                    <a href="#" class="text-white">
                        Plan du site
                    </a>
                </div>
            </div>
        {% endblock %}
    </footer>
</div>
</html></html>
